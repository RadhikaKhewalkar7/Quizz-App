<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalbgfoodquizz"
    tools:context=".Food">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="381dp"
        android:layout_marginTop="134dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#DA6D6D"
            android:onClick="trueButton"
            android:text="True"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="#673AB7"
            android:onClick="falseButton"
            android:text="False"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:backgroundTint="#FDFCFC"
            android:gravity="center"
            android:text="SCORE"
            android:textAlignment="gravity"
            android:textColor="#0C0B0C"
            android:textDirection="inherit"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            app:autoSizeTextType="uniform" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#B8190E"
            android:backgroundTint="#EA4539"
            android:progressTint="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="what is this"
        android:textAlignment="gravity"
        android:textColor="#430C4C"
        android:textDirection="inherit"
        android:textSize="30sp"
        android:textStyle="normal"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>